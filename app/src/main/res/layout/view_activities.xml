<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/btn_login_bg">


    <Button
        android:id="@+id/allActivities"
        android:background="@drawable/balloons"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginLeft="127dp"
        android:layout_marginStart="127dp"
        android:text="Show All Activities"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp" />

    <Button
        android:id="@+id/lessonActs"
        android:background="@drawable/blackboard"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:text="Show Lessons"
        android:layout_above="@+id/examActs"
        android:layout_alignLeft="@+id/allActivities"
        android:layout_alignStart="@+id/allActivities"
        android:layout_marginBottom="50dp" />

    <Button
        android:id="@+id/examActs"
        android:background="@drawable/grades"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:text="Show Exams"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/lessonActs"
        android:layout_alignStart="@+id/lessonActs"
        android:layout_marginBottom="52dp" />
</RelativeLayout>